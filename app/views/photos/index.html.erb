<p><%= link_to 'Add a photo', new_photo_path %></p>

<% if @photos.any? %>
	<% @photos.reverse.each do |photo| %>
		<section class="photo">
			<p><%= link_to image_tag(photo.image.url(:med)), photo.image.url %><br>
			<%= photo.caption %><br>
			<%= link_to 'Edit caption', edit_photo_path(photo) %>
			<%= link_to 'Delete photo', photo_path(photo), method: :delete if can?(:destroy, photo) %></p>
		</section>
	<% end %>
<% else %>
	No photos (yet).
<% end %>